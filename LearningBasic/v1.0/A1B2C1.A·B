    WP = WS + WS * .25
    REM "CALCULAR SECÄ«O DO NÈCLEO"
    S = 1.2 * SQR(WP)
    REM "CALCULAR NÈMERO DE ESPIRAS DO PRIMµRIO"
    NP = VP * 50 / S
    REM "CALCULAR NÈMERO DE ESPIRAS POR VOLT"
